<div class="container">
    <div class="row nt-5">
        <h3 class="text-center text-uppercase p-2">Lista de citas</h3>
        {{#if citas}}
            <table class="table text-center">
                <thead>
                    <tr class="table-dark">
                        <th scope="col">Nombre Doctor</th>
                        <th scope="col">Especialidad</th>
                        <th scope="col">Nombre Paciente</th>
                        <th scope="col">Fecha</th>
                        <th scope="col">Hora</th>
                        <th scope="col">Acciones</th>
                    </tr>
                </thead>
                <tbody style="background: aliceblue;">
                    {{#each citas}}
                        <tr>
                            <td>{{nombre_medico}} {{apellido}}</td>
                            <td>{{especialidad}}</td>
                            <td>{{nombre}}</td>
                            <td>{{fecha}}</td>
                            <td>{{horaDelaCita}}</td>
                            <td>
                                <div class="btn-group">
                                    <a href="/editUser/{{id}}" class="btn btn-warning p-2">
                                        Editar
                                    </a>
                                    <a href="/deleteUser/{{id}}" class="btn btn-danger p-2">
                                        Eliminar
                                    </a>
                                </div>
                            </td>
                        </tr>
                    {{/each}}
                </tbody>
                <tfoot>
                    <tr class="text-center table-dark" >
                        <td colspan="7">REGISTRO DE CITAS</td>
                    </tr>
                </tfoot>
            </table>
        </div>
        {{else}}
            {{!-- <div class="col-md-12"> --}}
                <div class="card text-center mx-auto" style="width: 350px;">
                    <div class="card-header">
                        <h3>Debes crear una cita</h3>
                    </div>
                    <div class="card-body">
                        <p>Presiona este boton para que puedas crear una cita</p>
                        <a href="addUser" class="btn btn-primary">Ir a crear</a>
                    
            </div>
        {{/if}}
    </div>
</div>