<div class="container p-4">
  <div class="row">
    <div class="col-md-4 mx-auto">
      <div class="card text-center">
        <div class="card-header">
          <h3 class="text-upeprcase">CREAR NUEVA CITA</h3>
        </div>
        <div class="card-body">
          {{#if error}}
            {{#each error}}
              <p style="color: red;">{{msg}}</p>
            {{/each}}
          {{/if}}
          <form action="/addUser" method="post">
            <div class="input-group mt-2">
              <label for="nombreDoctor" class="input-group-text">Doctor</label>
              <select id="id_medico" name="id_medico" class="form-select">
                {{#each doctores}}
                  <option value={{this.id_medico}} name="id_medico" id="id_medico">{{this.nombre}}, {{this.especialidad}}</option>
                {{/each}}
              </select>
            </div>
            <div>
              <input type="hidden" value="{{decoded.id}}" name="id_paciente" id="id_paciente">
            </div>
            <div class="input-group mt-2">
              <label for="nombrePaciente" class="input-group-text">Paciente</label>
              <input readonly class="form-control" type="text" value="{{decoded.nombre}}" name="nombre" id="nombre" placeholder="Ejemplo: Luis Angel"autofocus required>
            </div>
            <div class="input-group mt-2">
              <label for="fecha" class="input-group-text">Fecha</label>
              <input class="form-control" type="date" name="fecha" id="fecha" required>
            </div>
        <div class="input-group mt-2">
              <label for="inputState" class="input-group-text">Hora de la cita</label>
              <select id="inputState" class="form-select" name="horaCita">
                <option value="0">8:00 AM</option>
                <option value="1">9:00 AM</option>
                <option value="2">10:00 AM</option>
                <option value="3">11:00 AM</option>
                <option value="4">12:00 PM</option>
                <option value="5">1:00 PM</option>
                <option value="6">2:00 PM</option>
                <option value="7">3:00 PM</option>
                <option value="8">4:00 PM</option>
                <option value="9">5:00 PM</option>
              </select>
          </div>
            <div class="input-group mt-4 d-grid gap-2">
              <button class="btn btn-success">Crear</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>