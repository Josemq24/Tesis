<main class="mt-5">
	<div class="container">
		<div class="card mx-auto" style="width: 500px;">
			<div class="card-header">
                <img class="card-img-top mx-auto m-2" src="/img/logo.jpg" alt="Logo" style="width: 200px;
                height: 200px; display:block">
  				<h3 class="text-uppercase text-center p-4">REGISTRO</h3>
				<div class="card-body text-center">
          {{#if error}}
            {{#each error}}
              <p style="color: red;">{{msg}}</p>
            {{/each}}
          {{/if}}
					<form action="/registro" method="post" class="row g'3">
            <div>
                <label for="nombrePacient">Nombre</label>
               <input type="text" class="form-control mt-2" name="nombrePaciente" placeholder="Nombre" id="nombrePaciente" required>
            </div>
            
            <div>
                <label for="">Apellido</label>
			    <input type="text" class="form-control mt-2" name="apellidoPaciente" placeholder="Apellido" id="apellidoPaciente" required>
            </div>
            
            <div>
                <label for="">Número de teléfono</label>
                <input type="text" class="form-control mt-2" name="telefono" placeholder="Telefono" id="telefono" required>
            </div>
            
            <div class="col-12">
                <label for="">Dirección</label>
                <input type="text" class="form-control mt-2" name="direccion" placeholder="Direccion" id="direccion" required>
            </div>
            
          <div class="col-12">
              <label for="inputState" class="form-label">Sexo</label>
              <select id="inputState" class="form-select" name="sexo">
                <option value="hombre">Hombre</option>
                <option value="mujer">Mujer</option>
              </select>
          </div>

            <div class="col-12 mt-2">
                <label for="">Fecha de nacimiento</label>
                <input type="date" class="form-control mt-2" name="fechaNacimiento" placeholder="Fecha de Nacimiento" id="fechaNacimiento" required>
            </div>
            
            <div class="col-md-6 mt-2">
                <label for="">Correo electrónico</label>
	     		<input type="email" class="form-control mt-2" name="email" placeholder="email" id="email" required>
            </div>
            
            <div class="col-md-6 mt-2">
               <label for="">Contraseña</label>
               <input type="password" class="form-control mt-2" name="password" placeholder="Password" id="password" required>
            </div>
            
            <div class="col-12 mt-3">
                <input type="submit" class="btn btn-primary" value="registrarse">
            </div>
                
					</form>
				</div>
			</div>
		</div>
	</div>
</main>